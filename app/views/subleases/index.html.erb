<h1>Listing Subleases</h1>

<table>
  <thead>
    <tr>
      <th>Sublease Image</th>
      <th>Sublease Title</th>
      <th>Sublease Description</th>
      <th>Num. Subleasers</th>
      <th>Sublease Address</th>
      <th>Sublease State</th>
      <th>Sublease City</th>
      <th>Sublease Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subleases.each do |sublease| %>
      <tr>
        <td><%= sublease.s_title %></td>
        <td><%= image_tag sublease.image.url(:thumb) %></td>
        <td><%= sublease.s_description %></td>
        <td><%= sublease.s_num_occupants %></td>
        <td><%= sublease.s_address %></td>
        <td><%= sublease.s_state %></td>
        <td><%= sublease.s_city %></td>
        <td><%= sublease.s_zip %></td>
        <td><%= link_to 'Show', sublease %></td>
        <% if can? :update, sublease %>
          <td><%= link_to 'Edit', edit_sublease_path(sublease) %></td>
        <% end %>
        <% if can? :destroy, sublease %>
          <td><%= link_to 'Delete', sublease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

