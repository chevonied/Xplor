<h1>Listing Subleases</h1>

<div class="btn-group" id="toolbar" role="group" aria-label="Basic example">
  <button type="button" id="toolbar-btn" class="btn btn-secondary"><%= link_to "My Rentals", priv_r_index_path %></button>
  <button type="button" id="toolbar-btn" class="btn btn-secondary"><%= link_to "My Subleases", priv_s_index_path %></button>
  <button type="button" id="toolbar-btn" class="btn btn-secondary"><%= link_to "All Rentals", rentals_path %></button>
  <button type="button" id="toolbar-btn" class="btn btn-secondary"><%= link_to "All Subleases", subleases_path %></button>
  <button type="button" id="toolbar-btn" class="btn btn-secondary"><%= link_to "My Messages", conversations_path %></button>
</div>  

<table>
  <thead>
    <tr>
      <th>Sublease Title</th>
      <th>Sublease Description</th>
      <th>Num. Subleasers</th>
      <th>Sublease Address</th>
      <th>Sublease State</th>
      <th>Sublease City</th>
      <th>Sublease Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subleases.each do |sublease| %>
      <% if can? :update, sublease %>
      <tr>
        <td><%= sublease.s_title %></td>
        <td><%= image_tag sublease.image.url(:thumb) %></td>
        <td><%= sublease.s_description %></td>
        <td><%= sublease.s_num_occupants %></td>
        <td><%= sublease.s_address %></td>
        <td><%= sublease.s_state %></td>
        <td><%= sublease.s_city %></td>
        <td><%= sublease.s_zip %></td>
        <td><%= link_to 'Show', sublease %></td>
        <td><%= link_to 'Edit', edit_sublease_path(sublease) %></td>
        <td><%= link_to 'Delete', sublease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sublease', new_sublease_path %>
